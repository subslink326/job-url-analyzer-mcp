# Server Configuration
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./data/job_analyzer.db
# For PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/job_analyzer

# CORS Configuration (comma-separated)
